@using TradingChat.Application.UseCases.CreateChatRoom;
@model CreateChatRoomCommand

@{
    ViewData["Title"] = "Create Chat";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a Chat Room.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="MaxNumberOfUsers" class="form-control" aria-required="true" placeholder="10" />
                <label asp-for="MaxNumberOfUsers">Max Number of Users</label>
                <span asp-validation-for="MaxNumberOfUsers" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}